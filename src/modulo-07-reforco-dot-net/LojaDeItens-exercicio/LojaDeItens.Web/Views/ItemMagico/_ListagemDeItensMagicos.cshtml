@model LojaDeItens.Web.Models.ItemMagico.ItemMagicoListagemViewModel
@using LojaDeItens.Web.Models.ItemMagico

@{
    string ultimaPaginaAttr = Model.UltimaPagina ? "true" : "";
}
<div class="table-responsive">
    <table class="table table-striped" data-ultima-pagina="@ultimaPaginaAttr" id="@Model.GridId">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (ItemMagicoParaListaViewModel item in Model.Itens)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nome</td>
                        <td>
                            @if (item.PodeEditar)
                            {
                                @*<a href="/ItemMagico/Editar?id=1">Editar</a>*@
                                @Html.ActionLink("Editar", "Editar", "ItemMagico", new { id = item.Id }, new { @class = "btn btn-default glyphicon glyphicon-pencil pull-right" })
                            }

                            <button onclick="itemMagicoIndex.excluir(@item.Id)" class="btn btn-default glyphicon glyphicon-trash pull-right">Excluir</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
